{
    "name": "pedhot-dev/libnosql-pm",
    "description": "Database library designed for PocketMine-MP.",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.67",
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "fix-codestyle": "@php ./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --verbose --diff"
    },
    "autoload":{
        "classmap": [
            "src/"
        ]
    },
    "extra": {
        "virion": {
            "spec": "3.1",
            "namespace-root": "libnosql"
        }
    }
}
